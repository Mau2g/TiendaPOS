<UserControl x:Class="TiendaPOS.Presentacion.Views.Pedidos.NuevoPedidoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TiendaPOS.Presentacion.Views.Pedidos"
             mc:Ignorable="d">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de Productos -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de búsqueda -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         Padding="10"
                         Margin="0,0,10,0"
                         FontSize="16"
                         PlaceholderText="Buscar productos..."/>
                
                <Button Grid.Column="1" 
                        Content="Buscar"
                        Padding="20,10"
                        Command="{Binding SearchCommand}"/>
            </Grid>

            <!-- Grid de Productos -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Productos}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    BorderBrush="#ddd"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Margin="5"
                                    Width="200"
                                    Height="280">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="140"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Imagen del producto -->
                                    <Image Grid.Row="0" 
                                           Source="{Binding ImagenUrl}"
                                           Stretch="UniformToFill"/>

                                    <!-- Nombre del producto -->
                                    <TextBlock Grid.Row="1" 
                                             Text="{Binding Nombre}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Margin="10,5"
                                             TextWrapping="Wrap"/>

                                    <!-- Precio -->
                                    <TextBlock Grid.Row="2" 
                                             Text="{Binding Precio, StringFormat='S/ {0:N2}'}"
                                             FontSize="18"
                                             Foreground="#2ecc71"
                                             Margin="10,0,10,5"/>

                                    <!-- Stock -->
                                    <TextBlock Grid.Row="3" 
                                             Text="{Binding Stock, StringFormat='Stock: {0}'}"
                                             Foreground="#7f8c8d"
                                             Margin="10,0,10,5"/>

                                    <!-- Botón Agregar -->
                                    <Button Grid.Row="4" 
                                            Content="Agregar"
                                            Margin="10,5,10,10"
                                            Command="{Binding DataContext.AgregarProductoCommand, 
                                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Background="#3498db"
                                            Foreground="White"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Carrito de Compras -->
        <Grid Grid.Column="1" Background="#f5f6fa">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título del carrito -->
            <TextBlock Grid.Row="0" 
                       Text="Carrito de Compras"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="15"/>

            <!-- Lista de productos en el carrito -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ProductosEnCarrito}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#ddd"
                                    BorderThickness="0,0,0,1"
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Nombre del producto -->
                                    <TextBlock Grid.Column="0" 
                                             Grid.Row="0"
                                             Text="{Binding Producto.Nombre}"
                                             FontWeight="SemiBold"/>

                                    <!-- Controles de cantidad -->
                                    <StackPanel Grid.Column="0" 
                                              Grid.Row="1"
                                              Orientation="Horizontal"
                                              Margin="0,5">
                                        <Button Content="-"
                                                Width="30"
                                                Command="{Binding DataContext.DisminuirCantidadCommand, 
                                                          RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                        <TextBlock Text="{Binding Cantidad}"
                                                 VerticalAlignment="Center"
                                                 Margin="10,0"/>
                                        <Button Content="+"
                                                Width="30"
                                                Command="{Binding DataContext.AumentarCantidadCommand, 
                                                          RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>

                                    <!-- Subtotal -->
                                    <TextBlock Grid.Column="0"
                                             Grid.Row="2"
                                             Text="{Binding Subtotal, StringFormat='S/ {0:N2}'}"
                                             FontWeight="SemiBold"
                                             Foreground="#2ecc71"/>

                                    <!-- Botón eliminar -->
                                    <Button Grid.Column="1"
                                            Grid.Row="0"
                                            Grid.RowSpan="3"
                                            Content="✕"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="#e74c3c"
                                            Command="{Binding DataContext.EliminarProductoCommand, 
                                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Total y botón confirmar -->
            <Grid Grid.Row="2" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Total -->
                <StackPanel Grid.Row="0" 
                          Orientation="Horizontal"
                          Margin="15">
                    <TextBlock Text="Total:"
                             FontSize="20"
                             FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Total, StringFormat='S/ {0:N2}'}"
                             FontSize="20"
                             FontWeight="Bold"
                             Foreground="#2ecc71"
                             Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Botón confirmar -->
                <Button Grid.Row="1"
                        Content="Confirmar Pedido"
                        Command="{Binding ConfirmarPedidoCommand}"
                        Background="#2ecc71"
                        Foreground="White"
                        FontSize="16"
                        Padding="20,15"
                        Margin="15"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
