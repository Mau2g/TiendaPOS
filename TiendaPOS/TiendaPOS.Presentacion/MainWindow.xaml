<Window x:Class="TiendaPOS.Presentacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TiendaPOS" Height="450" Width="800"
        WindowStyle="None" WindowState="Maximized"
        Background="White">
    
    <Window.Resources>
        <!-- Estilos para botones principales -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Barra lateral -->
        <StackPanel Grid.Column="0" Background="#2c3e50">
            <TextBlock Text="TiendaPOS"
                       Foreground="White"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,40"/>
            
            <Button Content="Nuevo Pedido"
                    Style="{StaticResource MainButtonStyle}"
                    Margin="20,10"/>
            
            <Button Content="Pedidos Delivery"
                    Style="{StaticResource MainButtonStyle}"
                    Margin="20,10"/>
            
            <Button Content="Facturación"
                    Style="{StaticResource MainButtonStyle}"
                    Margin="20,10"/>
            
            <Button Content="Reportes"
                    Style="{StaticResource MainButtonStyle}"
                    Margin="20,10"/>
            
            <Button Content="Configuración"
                    Style="{StaticResource MainButtonStyle}"
                    Margin="20,10"/>
        </StackPanel>

        <!-- Contenido principal -->
        <Grid Grid.Column="1" Margin="20">
            <TextBlock Text="Bienvenido a TiendaPOS"
                       FontSize="32"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
